<h1>Eat the burger!</h1>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>Burgers waiting to be eaten.</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}

            <p>{{burger_name}}</p><button class="devoured-button btn btn-light" data-id="{{id}}" data-justDevoured="{{devoured}}"> DEVOUR IT </button>

          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm">
        <h2>Burgers resting in burger heaven.</h2>

        <ul>
          {{#each burgers}}
            {{#if devoured}}

              <p>{{burger_name}}</p>

            {{/if}}
          {{/each}}
        </ul>
    </div>   
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
        <h2>Let me create my own burger!</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="bn">Burger Name:</label>
            <input type="text" id="bn" name="name">
          </div>

          <button type="submit" class="btn btn-light">ADD IT TO THE MIX</button>
        </form>
    </div>
  </div>
</div>
